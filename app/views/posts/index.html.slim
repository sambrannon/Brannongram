.wrap
  div.posts
    - @posts.each do |p|
      article.post
        .post__header
          = image_tag 'avatar_default.jpg', class: 'post__header-avatar'
          span.post__header-name sambrannon
          span.post__header-time 12m
        = link_to post_path(p), class: 'post__image' do
          = image_tag p.image.url(:medium)
        p.post__caption
          = p.caption
